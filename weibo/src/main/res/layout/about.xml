<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@id/about_rel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/weibo_about_logo" />

        <TextView
            android:id="@id/weiboVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6.0dip"
            android:includeFontPadding="false"
            android:textColor="@color/main_highlight_text_color"
            android:textSize="11.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@id/scoreLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_item_height_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/scoreContent"
                    style="@style/userinfo_panel_textview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:text="@string/score_weibo" />

                <ImageView
                    android:id="@id/score_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/settings_item_padding_right"
                    android:gravity="center" />
            </RelativeLayout>

            <ImageView
                android:id="@id/divider1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@id/officeWeiboLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_item_height_middle"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/officeWeiboContent"
                    style="@style/userinfo_panel_textview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:text="@string/weibo_officialweibo" />

                <ImageView
                    android:id="@id/officeWeiboLayout_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/settings_item_padding_right"
                    android:gravity="center" />
            </RelativeLayout>

            <ImageView
                android:id="@id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@id/faqLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_item_height_middle"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/faqContent"
                    style="@style/userinfo_panel_textview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:text="@string/faq" />

                <ImageView
                    android:id="@id/faq_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/settings_item_padding_right"
                    android:gravity="center" />
            </RelativeLayout>

            <ImageView
                android:id="@id/divider3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@id/updateLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_item_height_top"
                android:orientation="horizontal"
                android:paddingRight="16.0dip">

                <TextView
                    android:id="@id/updateContent"
                    style="@style/userinfo_panel_textview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:text="@string/weibo_check_update" />

                <TextView
                    android:id="@id/iv_new_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/settings_item_padding_right"
                    android:text="@string/new_mark"
                    android:textSize="12.0sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@id/updateLayout_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/settings_item_padding_right"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@id/weiboService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34.0dip"
            android:text="@string/about_service"
            android:textColor="@color/main_content_subtitle_text_color"
            android:textSize="@dimen/about_service_textsize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/Companytitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/about_company_phone_name"
                android:textColor="@color/main_content_text_color"
                android:textSize="@dimen/about_phone_title_textsize" />

            <TextView
                android:id="@id/company_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/about_company_phone"
                android:textColor="@color/main_link_text_color"
                android:textSize="@dimen/about_phone_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/persontitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/about_person_phone_name"
                android:textColor="@color/main_content_text_color"
                android:textSize="@dimen/about_phone_title_textsize" />

            <TextView
                android:id="@id/person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/about_person_phone"
                android:textColor="@color/main_link_text_color"
                android:textSize="@dimen/about_phone_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="30.0dip">

            <TextView
                android:id="@id/tv_video_tech_provider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/main_content_retweet_text_color"
                android:textSize="@dimen/about_phone_title_textsize" />

            <TextView
                android:id="@id/service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:includeFontPadding="false"
                android:text="@string/about_weibo_service_protocol"
                android:textColor="@color/main_link_text_color"
                android:textSize="@dimen/about_weibo_version_textsize" />

            <TextView
                android:id="@id/about_weibo_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:includeFontPadding="false"
                android:text="@string/about_content4"
                android:textColor="@color/main_content_subtitle_text_color"
                android:textSize="@dimen/about_weibo_version_textsize" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>